<Window x:Class="POP31_MILOS_GUI.Windows.Akcija"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:POP31_MILOS_GUI.Windows"
        mc:Ignorable="d"
        Title="Akcija" Height="400" Width="400" Background="Aquamarine">
    <Grid>
        <Label Content="Pocetak akcije:" HorizontalAlignment="Left" Margin="36,41,0,0" VerticalAlignment="Top" Width="101" FontSize="14"/>
        <DatePicker Name="dpPocetak" SelectedDate="{Binding Path=PocetakAkcije, StringFormat=dd/MM/yyyy}" HorizontalAlignment="Left" Margin="170,46,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday"/>
        <Label Content="Kraj akcije:" HorizontalAlignment="Left" Margin="36,91,0,0" VerticalAlignment="Top" Width="101" FontSize="14"/>
        <DatePicker Name="dpKraj" SelectedDate="{Binding Path=KrajAkcije,StringFormat=dd/MM/yyyy}" HorizontalAlignment="Left" Margin="170,95,0,0" VerticalAlignment="Top"/>
        <Label Content="Popust:" HorizontalAlignment="Left" Margin="100,307,0,0" VerticalAlignment="Top" Width="81" FontSize="14"/>
        <TextBox Name="tbPopust" Text="{Binding Path=Popust}" HorizontalAlignment="Left" Height="29" Margin="186,307,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>


    </Grid>
</Window>
